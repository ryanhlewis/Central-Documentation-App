<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment" >


    <TextView
        android:id="@+id/text_home"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="536dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="248dp"
        android:layout_marginTop="636dp"
        android:text="MainFragment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@tools:sample/avatars" />

    <ImageButton
        android:id="@+id/button"
        style="@android:style/Widget.Material.ImageButton"
        android:layout_width="362dp"
        android:layout_height="142dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="280dp"
        android:layout_marginEnd="110dp"
        android:backgroundTint="#70F67D"
        android:contentDescription="Login Using Github"
        android:scaleType="fitEnd"
        android:src="@drawable/github"
        android:background="@drawable/rounded_corner"
        android:text="Login using Github"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/black"
        app:strokeWidth="20dp"
        app:tint="#000000" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="229dp"
        android:layout_height="100dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="312dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Login with Github"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/button2"
        android:layout_width="356dp"
        android:layout_height="72dp"
        android:layout_marginStart="109dp"
        android:layout_marginTop="436dp"
        android:layout_marginEnd="110dp"
        android:contentDescription="Login Using Github"
        android:scaleType="fitEnd"
        android:src="@drawable/ic_baseline_fast_forward_24"
        android:background="@drawable/rounded_corner"
        android:backgroundTint="#9BFFF7"
        android:text="Login using Github"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#0E0E0E" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="250dp"
        android:layout_height="38dp"
        android:layout_marginStart="60dp"
        android:layout_marginTop="452dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Skip"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="274dp"
        android:layout_height="32dp"
        android:layout_marginStart="68dp"
        android:fontFamily="@font/fredoka_one"
        android:text="Central Documentation"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="99dp"
        android:layout_height="109dp"
        android:layout_marginStart="156dp"
        android:layout_marginTop="72dp"
        android:src="@drawable/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="258dp"
        android:layout_height="29dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="10dp"
        android:text="Peer-edited, open, and understandable documentation for everyone."
        android:textAlignment="center"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

</androidx.constraintlayout.widget.ConstraintLayout>